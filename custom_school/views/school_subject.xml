<odoo>
    <data>
        <record id="view_custom_school_subject_form" model="ir.ui.view">
            <field name="name">view.custom.school.subject.form</field>
            <field name="model">school.subject</field>
            <field name="arch" type="xml">
                <form string="Subjects">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name" style="width:75%"/>
                                <field name="credits" style="width:75%"/>
                                <field name="max_students" style="width:75%"/>
                            </group>
                            <group name="group_right">
                                <field name="active"/>
                                <field name="teacher_id" style="width:75%"/>
                            </group>
                            <field name="student_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_custom_school_subject_tree" model="ir.ui.view">
            <field name="name">view.custom.school.subject.tree</field>
            <field name="model">school.subject</field>
            <field name="arch" type="xml">
                <tree string="Subjects">
                    <field name="name"/>
                    <field name="credits"/>
                    <field name="max_students"/>
                    <field name="active"/>
                    <field name="teacher_id"/>
                    <field name="student_ids"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>